{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/yourusername/career-schema/v2.0.0/schema.json",
  "title": "Extended Career Data Schema",
  "description": "A versatile, superset schema of JSON Resume designed for career 'factories'. Supports extensive metadata, emphasis scoring, and customizable accomplishment sections while maintaining backward compatibility.",
  "version": "1.0.0",
  "type": "object",
  "required": [
    "$schema",
    "basics"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "basics": {
      "type": "object",
      "required": [
        "name",
        "email"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "image": {
          "type": "string",
          "format": "uri"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "summary": {
          "type": "string"
        },
        "location": {
          "type": "object",
          "properties": {
            "address": {
              "type": "string"
            },
            "postalCode": {
              "type": "string"
            },
            "city": {
              "type": "string"
            },
            "countryCode": {
              "type": "string"
            },
            "region": {
              "type": "string"
            }
          }
        },
        "profiles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "network": {
                "type": "string"
              },
              "username": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        }
      }
    },
    "work": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/experienceItem"
      }
    },
    "volunteer": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/experienceItem"
      }
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "institution": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "area": {
            "type": "string"
          },
          "studyType": {
            "type": "string"
          },
          "startDate": {
            "type": "string",
            "format": "date"
          },
          "endDate": {
            "type": [
              "string",
              "null"
            ],
            "format": "date"
          },
          "score": {
            "type": "string"
          },
          "courses": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "awards": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "awarder": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          }
        }
      }
    },
    "certificates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "issuer": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },
    "publications": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "publisher": {
            "type": "string"
          },
          "releaseDate": {
            "type": "string",
            "format": "date"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "summary": {
            "type": "string"
          }
        }
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "level": {
            "type": "string"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "language": {
            "type": "string"
          },
          "fluency": {
            "type": "string"
          }
        }
      }
    },
    "interests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "references": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "reference": {
            "type": "string"
          }
        }
      }
    },
    "projects": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/projectItem"
      }
    },
    "meta": {
      "type": "object",
      "description": "Factory metadata for versioning, canonical tracking, and theme hints.",
      "properties": {
        "version": {
          "type": "string"
        },
        "canonical": {
          "type": "boolean",
          "default": true
        },
        "lastModified": {
          "type": "string",
          "format": "date-time"
        },
        "theme": {
          "type": "string",
          "description": "Preferred theme/layout ID"
        }
      }
    },
    "accomplishments": {
      "type": "array",
      "description": "Generic container for any impactful output (Speaking, Writing, Patents, Media, Art). Replaces rigid sections like 'speaking'.",
      "items": {
        "type": "object",
        "required": [
          "title",
          "type"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "description": "e.g., 'Keynote', 'Article', 'Patent', 'Exhibition', 'Hackathon'",
            "examples": [
              "Keynote",
              "Article",
              "Patent",
              "Panel",
              "Workshop"
            ]
          },
          "entity": {
            "type": "string",
            "description": "Publisher, Conference, Org, or Platform"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "location": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "stats": {
            "type": "object",
            "description": "Quantifiable impact (views, attendees, stars)",
            "additionalProperties": {
              "type": [
                "number",
                "string"
              ]
            }
          },
          "emphasis": {
            "$ref": "#/$defs/emphasisScore"
          },
          "visibility": {
            "$ref": "#/$defs/visibilityControl"
          }
        }
      }
    }
  },
  "$defs": {
    "emphasisScore": {
      "type": "object",
      "description": "Relevance scores (0-10) for different persona targets.",
      "additionalProperties": {
        "type": "number",
        "minimum": 0,
        "maximum": 10
      },
      "examples": [
        {
          "executive": 9,
          "technical": 7
        }
      ]
    },
    "visibilityControl": {
      "type": "object",
      "description": "Fine-grained inclusion/exclusion rules.",
      "properties": {
        "public": {
          "type": "boolean",
          "default": true
        },
        "confidential": {
          "type": "boolean",
          "default": false
        },
        "includeIn": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "excludeFrom": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "experienceItem": {
      "type": "object",
      "description": "Standard work/volunteer item with extended properties.",
      "properties": {
        "name": {
          "type": "string"
        },
        "company": {
          "type": "string"
        },
        "organization": {
          "type": "string"
        },
        "position": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "startDate": {
          "type": "string",
          "format": "date"
        },
        "endDate": {
          "type": [
            "string",
            "null"
          ],
          "format": "date"
        },
        "summary": {
          "type": "string"
        },
        "highlights": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "location": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "emphasis": {
          "$ref": "#/$defs/emphasisScore"
        },
        "metrics": {
          "type": "object",
          "additionalProperties": {
            "type": [
              "number",
              "string"
            ]
          }
        },
        "visibility": {
          "$ref": "#/$defs/visibilityControl"
        }
      }
    },
    "projectItem": {
      "type": "object",
      "description": "Project with extended properties.",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "highlights": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "startDate": {
          "type": "string",
          "format": "date"
        },
        "endDate": {
          "type": [
            "string",
            "null"
          ],
          "format": "date"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "entity": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "emphasis": {
          "$ref": "#/$defs/emphasisScore"
        },
        "metrics": {
          "type": "object",
          "additionalProperties": {
            "type": [
              "number",
              "string"
            ]
          }
        },
        "visibility": {
          "$ref": "#/$defs/visibilityControl"
        }
      }
    }
  },
  "additionalProperties": true
}
